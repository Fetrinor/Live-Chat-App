<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messages_item_imgUserProfile"
            app:civ_border_color="@color/black"
            app:civ_border_width="3dp"
            android:layout_width="66dp"
            android:layout_height="66dp" />

        <TextView
            android:id="@+id/messages_item_txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/messages_item_imgSend"
            android:layout_toRightOf="@+id/messages_item_imgUserProfile"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messages_item_txtLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/messages_item_txtUserName"
            android:layout_toLeftOf="@+id/messages_item_imgSend"
            android:layout_toRightOf="@+id/messages_item_imgUserProfile"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/messages_item_imgSend"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sag_yon" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>